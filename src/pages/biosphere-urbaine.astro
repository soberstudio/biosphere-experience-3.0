---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroPage from "../components/molecules/HeroPage.astro";
import HeroUrbaine from "../assets/images/biosphere-experience-biosphere-urbaine.jpg";

const { Content } = await import("../data/appartement-du-futur.md");
---

<BaseLayout pageTitle="Biosphère Urbaine">
  <HeroPage src={HeroUrbaine} alt="Biosphère Urbaine" />
  <div class="container flex flex-col mx-auto gap-6">
    <div id="title">
      <h1 class="flex flex-col gap-1 w-81 sm:w-102">
        <span class="text-5xl sm:text-6xl font-bold uppercase">biosphere</span>
        <span class="self-end text-3xl sm:text-4xl font-bold -mt-2 uppercase"
          >urbaine</span
        >
      </h1>
    </div>

    <div class="col-start-1 border-l border-accent pl-4">
      <h2 class="mt-0">Informations clés</h2>
      <ul class="list-disc list-inside">
        <li>Lieu : Boulogne-Billancourt, Région parisienne</li>
        <li>Date : second semestre 2024</li>
        <li>Durée de l'expérience : 4 mois</li>
      </ul>
    </div>

    <div><Content /></div>

    <div class="col-start-1 pl-4">
      <h2 class="mt-0">Pour en savoir plus</h2>
      <ul class="list-disc list-inside mt-2">
        <li>Le livre "Ma Biosphère", Éditions Arthaud</li>
        <li>Le documentaire Arte "4 mois sur ma Biosphère"</li>
        <li>
          Le résumé des résultats <a
            href="/rapports/Rapport-Biosphere-Plateforme.jpg"
            download>télécharger ici</a>
        </li>
      </ul>
    </div>
  </div>
</BaseLayout>
